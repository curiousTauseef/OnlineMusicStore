<%- include('../_layouts/adminheader') %>

<h2 class="page-title"> Add a page</h2>
<a href="/admin/pages/add-page" class="btn btn-primary">Add a new page</a>
<br><br>

<table class="table table-striped">
	<thead>
		<tr class="home">
			<th>Title</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% pages.forEach(function(page){%>
			<tr id="id_<%= page._id %>" class="<%= page.slug %>">
				<td><%= page.title %></td>
				<td><a href="/admin/pages/edit-page/<%= page._id %>">Edit</td>
				<% if (page.slug == "home") {%>
					<td>Cannot delete</td>
				<% } else{%>
					<td><a class="confirmDeletion" href="/admin/pages/delete-page/<%= page._id %>">Delete</td>
				<% } %>
			</tr>
		<% });%>
	</tbody>
</table>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>

<%- include('../_layouts/adminfooter') %>